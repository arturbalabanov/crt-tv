[Unit]
Description=CRT TV Filesystem Ovserver (automatically process new images)
After=default.target

[Service]
Type=simple
Restart=always
RestartSec=1
User=root
ExecStart=/root/.local/bin/crt-tv --config-file "{{ config_file_path }}" --verbose run-observer
StandardOutput=syslog
StandardError=syslog

[Install]
WantedBy=multi-user.target
